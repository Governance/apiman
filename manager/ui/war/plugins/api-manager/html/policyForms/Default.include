<div class="form policy-config default" ng-controller="Apiman.DefaultPolicyConfigFormController">
  <span apiman-i18n-key="default-policy-config-msg">Please manually configure your policy's JSON configuration below.</span>
  <textarea name="json" id="raw-config" ng-model="rawConfig" ng-disabled="isEntityDisabled()" json-validation></textarea>
  <span ng-show="policyForm.json.$touched && policyForm.json.$invalid" apiman-i18n-key="json-error">The value is not valid!</span>
</div>
