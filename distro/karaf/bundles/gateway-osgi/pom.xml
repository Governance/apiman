                                </goals>
                                <configuration>
                                    <artifactSet>
                                        <includes>
                                            <include>
                                                ${pkgGroupId}:apiman-gateway-platforms-war-tomcat8-gateway
                                            </include>
                                            <include>${pkgGroupId}:apiman-common-config</include>
                                            <include>${pkgGroupId}:apiman-gateway-engine-beans</include>
                                            <include>${pkgGroupId}:apiman-gateway-engine-core</include>
                                            <include>${pkgGroupId}:apiman-gateway-engine-ispn</include>
                                            <include>${pkgGroupId}:apiman-gateway-engine-es</include>
                                            <include>${pkgGroupId}:apiman-gateway-engine-influxdb</include>
                                            <include>${pkgGroupId}:apiman-gateway-engine-policies</include>
                                            <include>${pkgGroupId}:apiman-gateway-platforms-servlet</include>
                                            <include>${pkgGroupId}:apiman-gateway-api-rest</include>
                                            <include>${pkgGroupId}:apiman-gateway-api-rest-impl</include>
                                            <include>commons-io:commons-io</include>
                                            <include>commons-configuration:commons-configuration</include>
                                        </includes>
                                    </artifactSet>
                                    <promoteTransitiveDependencies>true</promoteTransitiveDependencies>
                                    <createDependencyReducedPom>true</createDependencyReducedPom>
                                </configuration>
                            </execution>
                        </executions>
                    </plugin>
                </plugins>
            </build>
        </profile>
