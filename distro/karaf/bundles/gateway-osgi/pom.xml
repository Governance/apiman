    <build>
        <plugins>
            <plugin>
                <artifactId>maven-resources-plugin</artifactId>
                <executions>
                    <execution>
                        <id>copy-resources</id>
                        <phase>generate-sources</phase>
                        <goals>
                            <goal>resources</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>

            <!-- OSGI Maven plugin generating the MANIFEST file and packaging the lib -->
            <plugin>
                <groupId>org.apache.felix</groupId>
                <artifactId>maven-bundle-plugin</artifactId>
                <extensions>true</extensions>
                <executions>
                    <execution>
                        <id>bundle-manifest</id>
                        <phase>process-classes</phase>
                        <goals>
                            <goal>manifest</goal>
                        </goals>
                    </execution>
                </executions>
                <configuration>
                    <instructions>
                        <Bundle-SymbolicName>${project.groupId}.${project.artifactId}</Bundle-SymbolicName>
                        <Bundle-Activator>io.apiman.gateway.platforms.osgi.Activator</Bundle-Activator>
                        <Import-Package>
                            javax.servlet,
                            org.apache.lucene.analysis.standard;resolution:="optional",
                            org.apache.http.conn*;resolution:="optional",
                            com.sun.jdi.request;resolution:="optional",
                            com.sun.jdi*;resolution:="optional",
                            com.sun.jna*;resolution:="optional",
                            com.judoscript*;resolution:="optional",
                            com.codahale.*;resolution:="optional",
                            com.google.protobuf;resolution:="optional",
                            com.spatial4j.core.*;resolution:="optional",
                            com.vividsolutions.jts.geom;resolution:="optional",
                            sun.reflect;resolution:="optional",
                            bsh;resolution:="optional",
                            io.apiman.gateway.engine*;version=1.2.2,
                            io.apiman.gateway.engine.beans*;version=1.2.2,
                            io.apiman.gateway.platforms.war,
                            io.apiman.gateway.platforms.war.filters,
                            io.apiman.gateway.platforms.war.i18n,
                            io.apiman.gateway.platforms.war.listeners,
                            io.apiman.gateway.platforms.war.servlets,
                            io.searchbox.action;resolution:="optional",
                            io.searchbox.client;resolution:="optional",
                            org.apache.commons.digester*;resolution:="optional",
                            org.apache.commons.jxpath*;resolution:="optional",
                            org.apache.commons.vfs2;resolution:="optional",
                            org.apache.log;resolution:="optional",
                            org.apache.log4j.helpers;resolution:="optional",
                            org.apache.lucene*;resolution:="optional",
                            org.infinispan*;resolution:="optional",
                            org.eclipse.jetty.npn;resolution:="optional",
                            org.apache.tomcat.jni;resolution:="optional",
                            org.apache.tools.ant.taskdefs;resolution:="optional",
                            org.bouncycastle.cert*;resolution:="optional",
                            org.bouncycastle.jce.provider,
                            org.bouncycastle.operator*;resolution:="optional",
                            org.hibernate*;resolution:="optional",
                            org.hyperic.sigar;resolution:="optional",
                            org.slf4j.impl;resolution:="optional",
                            org.ietf.jgss,
                            org.jboss.*;resolution:="optional",
                            sun.security*;resolution:="optional",
                            *;resolution:="optional"
                        </Import-Package>
                        <Export-Package>
                            !io.apiman.gateway.platforms.war
                        </Export-Package>
                        <Embed-Dependency>
                            *;scope=compile;artifactId=!junit|mockito-all
                        </Embed-Dependency>
                        <Embed-Transitive>false</Embed-Transitive>
                        <Require-Capability>
                            org.ops4j.pax.cdi.extension;filter:="(&amp;(extension=pax-cdi-extension)(version>=0.10)(!(version>=0.14)))",
                            osgi.extender;filter:="(osgi.extender=pax.cdi)",
                            osgi.ee;filter:="(&amp;(osgi.ee=JavaSE)(version=1.6))"
                        </Require-Capability>
                        <_removeheaders>Embed-Dependency,Embed-Transitive,Include-Resource,Embedded-Artifacts,Private-Package</_removeheaders>
                    </instructions>
                </configuration>
            </plugin>

        </plugins>
    </build>

    <profiles>
        <profile>
            <id>wab</id>
            <dependencies>
