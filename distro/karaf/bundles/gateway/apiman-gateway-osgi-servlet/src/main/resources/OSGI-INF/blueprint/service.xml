<blueprint xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="
           http://www.osgi.org/xmlns/blueprint/v1.0.0 http://www.osgi.org/xmlns/blueprint/v1.0.0/blueprint.xsd">

    <bean class="io.apiman.gateway.platforms.war.WarEngineAccessor" id="warEngineAccessor"/>
    <bean class="io.apiman.gateway.platforms.war.WarPlatformAccessor" id="warPlatformAccessor"/>

    <service ref="warEngineAccessor" interface="io.apiman.gateway.api.rest.impl.IEngineAccessor">
        <service-properties>
            <entry key="accessor" value="engineAccessor"/>
        </service-properties>
    </service>

    <service ref="warPlatformAccessor" interface="io.apiman.gateway.api.rest.impl.IPlatformAccessor">
        <service-properties>
            <entry key="accessor" value="platformAccessor"/>
        </service-properties>
    </service>

</blueprint>